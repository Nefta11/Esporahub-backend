# ===========================================
# ESPORAHUB BACKEND - CONFIGURACIÓN DE EJEMPLO
# ===========================================
# Copia este archivo a .env y configura los valores

# Servidor
PORT=3001
NODE_ENV=development

# MongoDB
# Para desarrollo local: mongodb://localhost:27017/esporahub
# Para MongoDB Atlas: mongodb+srv://<usuario>:<password>@cluster.mongodb.net/esporahub
MONGODB_URI=mongodb://localhost:27017/esporahub

# JWT (Autenticación)
JWT_SECRET=cambiar_por_clave_segura_minimo_32_caracteres
JWT_EXPIRES_IN=7d

# Cloudinary (Almacenamiento de imágenes)
# Crear cuenta gratis en: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:5173
